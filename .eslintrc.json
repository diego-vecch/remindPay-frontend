{
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "extends": [
    "./node_modules/ts-standard/eslintrc.json",
    "next/core-web-vitals",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "@typescript-eslint/quotes": ["error", "single"],
    "jsx-quotes": ["error", "prefer-single"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "jsxSingleQuote": true,
        "semi": false
      }
    ]
  }
}
